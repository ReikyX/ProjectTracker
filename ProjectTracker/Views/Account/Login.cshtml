@model ProjectTracker.Models.LoginDto
@{
	ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
	<div class="card shadow p-4" style="width: 400px;">
		<h2 class="text-center mb-4">Login</h2>

		<form asp-action="Login" method="post" class="card p-4 shadow-sm" style="max-width: 400px;">
			<div class="form-group mb-3">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" placeholder="E-Mail-Adresse" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" type="password" placeholder="Passwort" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary w-100">Einloggen</button>
			<div class="mt-3 text-center">
				<a asp-action="Registration">Noch keinen Account? Registrieren</a>
			</div>
		</form>
	</div>
</div>