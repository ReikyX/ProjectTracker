@model Project

@{
    ViewData["Title"] = "Projekt löschen";
}

<div class="card p-4 shadow" style="max-width: 450px; margin: 0 auto;">
    <h1 class="display-6 fw-bold text-danger mb-3">Projekt löschen</h1>

    <p>Möchten Sie dieses Projekt wirklich löschen?</p>

    <div class="mb-3">
        <strong>Name:</strong> @Model.Name <br />
        <strong>Beschreibung:</strong> @Model.Description <br />
        <strong>Start:</strong> @Model.StartDate.ToShortDateString() <br />
        <strong>Ende:</strong> @(Model.EndDate?.ToShortDateString() ?? "-") <br />
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id"/>

        <button class="btn btn-danger" type="submit">Löschen</button>
        <a class="btn btn-secondary" asp-action="Index">Abbrechen</a>
    </form>
</div>
