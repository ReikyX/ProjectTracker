@model Project
@{
    ViewData["Title"] = "Projekt bearbeiten";
}

<div class="card p-4 shadow" style="max-width: 400px;">

    <h1 class="display-4 fw-bold mb-3">Projekt bearbeiten</h1>

    <form asp-action="UpdateProject" asp-controller="Project" method="post">
        <input type="hidden" asp-for="Id" />
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control mb-3" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control mb-3" rows="4"></textarea>

        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control mb-3" />

        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control mb-3" />

        <button type="submit" class="btn btn-primary">Projekt speichern</button>
    </form>
</div>