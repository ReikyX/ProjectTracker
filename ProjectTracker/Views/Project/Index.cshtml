@model IEnumerable<ProjectTracker.Models.Project>

@{
    ViewData["Title"] = "Projekte";
}

<div class="text-center mb-4">
    <h1 class="display-4 fw-bold mb-3">Projekte</h1>
    <h2 class="text-muted mb-3">Erstellen und Verwalten von Projekten</h2>
    <a class="btn btn-outline-dark" asp-controller="Project" asp-action="CreateProject">Neues Projekt</a>
</div>

@if (Model == null || !Model.Any())
{
    <p class="text-center">Keine Projekte vorhanden.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Beschreibung</th>
                    <th>Startdatum</th>
                    <th>Enddatum</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.Description</td>
                        <td>@project.StartDate.ToShortDateString()</td>
                        <td>@(project.EndDate?.ToShortDateString() ?? "-")</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="EditProject" asp-route-id="@project.Id">Bearbeiten</a>
                            <a class="btn btn-sm btn-danger" asp-action="DeleteProject" asp-route-id="@project.Id">Löschen</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
