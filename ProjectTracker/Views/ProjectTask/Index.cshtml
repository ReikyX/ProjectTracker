@model IEnumerable<ProjectTracker.Models.ProjectTask>
@{
    ViewData["Title"] = "Aufgaben";
}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="fw-bold">Aufgaben</h1>
        <a class="btn btn-outline-dark"
           asp-action="CreateTask"
           asp-controller="ProjectTask">
           Neue Aufgabe
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center">Keine Aufgaben vorhanden.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Titel</th>
                        <th>Beschreibung</th>
                        <th>Projekt</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.Project?.Name</td>
                            <td>
                                <a asp-action="EditTask" asp-route-id="@task.Id" class="btn btn-sm btn-primary">Bearbeiten</a>
                                <a asp-action="DeleteTask" asp-route-id="@task.Id" class="btn btn-sm btn-danger">Löschen</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
